<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/colorOnSurface</item>
        <item name="colorBottomSheetSurface">@color/colorSurface</item>
        <item name="etBg">@color/colorPrimary</item>
        <item name="etBgLight">@color/colorSurface</item>
        <item name="layoutProgressBg">#ccfafafa</item>
        <item name="dialogTheme">@style/AlertDialogCustom</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>

        <item name="gray">#cfd8dc</item>
        <item name="brown">#d7ccc8</item>
        <item name="orange">#ffccbc</item>
        <item name="yellow">#ffe0b2</item>
        <item name="green">#c8e6c9</item>
        <item name="blue">#bbdefb</item>
        <item name="purple">#e1bee7</item>
        <item name="pink">#f8bbd0</item>
        <item name="red">#ef9a9a</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="android:textColor">@color/nightOnSurface</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorControlNormal">@color/nightOnSurface</item>
        <item name="colorOnPrimary">@color/nightOnPrimary</item>
        <item name="colorSurface">@color/nightColorSurface</item>
        <item name="colorOnSurface">@color/nightOnSurface</item>
        <item name="android:colorBackground">@color/nightColorPrimary</item>
        <item name="colorOnBackground">@color/nightOnSurface</item>
        <item name="colorBottomSheetSurface">#212121</item>
        <item name="etBg">@color/nightColorPrimaryDark</item>
        <item name="etBgLight">@color/nightColorPrimaryDark</item>
        <item name="layoutProgressBg">#cc000000</item>
        <item name="dialogTheme">@style/AlertDialogCustomDark</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>

        <item name="gray">#7d7d7d</item>
        <item name="brown">#3e2723</item>
        <item name="orange">#853f2a</item>
        <item name="yellow">#c1a648</item>
        <item name="green">#2e7d32</item>
        <item name="blue">#283593</item>
        <item name="purple">#4a148c</item>
        <item name="pink">#c2185b</item>
        <item name="red">#d32f2f</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorOnSurface</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryVariant</item>
        <item name="colorButtonNormal">@color/colorSecondaryVariant</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textColorSecondary">@color/colorOnSurface</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_slab_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="dialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="LoginThemeDark" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryVariant</item>
        <item name="colorButtonNormal">@color/colorSecondaryVariant</item>
        <item name="colorControlNormal">@color/nightOnSurface</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
        <item name="android:textColor">@color/nightOnSurface</item>
        <item name="android:textColorPrimary">@color/nightOnSurface</item>
        <item name="android:textColorSecondary">@color/nightOnSurface</item>
        <item name="android:windowBackground">@color/nightColorSurface</item>
        <item name="android:colorBackground">@color/nightColorSurface</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/nightOnSurface</item>
        <item name="textInputStyle">@style/FirebaseUI.TextInputEditText</item>
        <item name="hintTextColor">@color/nightOnSurface</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_slab_light</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustomDark</item>
    </style>

    <style name="FirebaseUI.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:textColor">@color/nightOnSurface</item>-->
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:background">@color/colorSurface</item>
    </style>

    <style name="AlertDialogCustomDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/nightOnSurface</item>
        <item name="android:textColor">@color/nightOnSurface</item>
        <item name="android:background">@color/nightColorSurface</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:textAppearance">@style/TextAppearanceNormal</item>
        <item name="textColor">@color/colorOnSurface</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>



    <style name="CustomShape">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">true</item>
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
        <item name="android:dropDownHorizontalOffset">-40dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="AppBottomSheetDialogThemeLight"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="drawableTint">?attr/colorOnSurface</item>
    </style>

    <style name="AppBottomSheetDialogThemeDark"
        parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="drawableTint">?attr/colorOnSurface</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_nav_bg</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.BlackText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearanceBigTitle">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceNormal">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceSmallTitle">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceTextButton">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="fontFamily">@font/roboto_slab_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceEditText">
        <item name="fontFamily">@font/roboto_slab_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceBody">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceDate">
        <item name="fontFamily">@font/roboto_slab_thin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
