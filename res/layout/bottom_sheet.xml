<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.dronina.cofolder.ui.bottomsheet.BottomSheetViewModel" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_edit"
                style="@style/Widget.MaterialComponents.Button.TextButton.BlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="20dp"
                android:text="@string/edit"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearanceTextButton"
                app:cornerRadius="16dp"
                app:iconPadding="20dp" />

            <Button
                android:id="@+id/btn_share"
                style="@style/Widget.MaterialComponents.Button.TextButton.BlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="20dp"
                android:text="@string/share"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearanceTextButton"
                app:cornerRadius="16dp"
                app:iconPadding="20dp" />

            <Button
                android:id="@+id/btn_leave_or_delete"
                style="@style/Widget.MaterialComponents.Button.TextButton.BlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_leave"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="20dp"
                android:text="@string/leave"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearanceTextButton"
                app:cornerRadius="16dp"
                app:iconPadding="20dp" />
        </LinearLayout>
</layout>