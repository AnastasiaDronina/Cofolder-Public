<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColor">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/colorOnSurface</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="shapeAppearanceMediumComponent">@style/CustomShape</item>
    </style>


    <style name="CustomShape">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">true</item>
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
        <item name="android:dropDownHorizontalOffset">-40dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>